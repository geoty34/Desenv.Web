FUNÇÃO
<?php
    function fatorial($num){
        //calculo para fatorial de $num
        $fatorial = 1;
        for($i=$num;  $i>=1; $i--){
            $fatorial = $fatorial *$i;
        }

        return $fatorial;
       

        //fazer laço de $num ate 1, acumulando os resultados mutiplicados

        //retornar o valor acumulado da mutiplicação
    }
for($i=5; $i<=12; $i++)
    echo "Fatorial de 5: " . $i . fatorial($i) . "<br>";
 //fazer a chamada de fatorial para os numeros de 5 a 10



