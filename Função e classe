 echo "Exercício 2: Circulo";
 echo "<br><br>";

 define("PI", 3.14);
 
 function area($raio){
    $area = 3.14 * $raio * $raio;
    return $area;

}
 



 function circ($raio){

    return 3.14 * $raio * 2;
}

$raio1=10;

$raio2=15;
$raio3=20;

$raios = array($raio1, $raio2, $raio3);
foreach ($raios as $raio){
    echo "Círculo de raio" . $raio . "cm";
    echo "Area: " . $area($raio) . "cm2 Circuferencia: " . 
    circ($raio) . "cm";
    echo "<br><br>";
}



?>

